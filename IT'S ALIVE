/*
 * Button and potentiometer controlled buzzer.
 * Prototype 1
 * Authors: Devon Verlangieri and Katie Maxson
 */
 
// constants won't change. They're used here to
// set pin numbers:
const int buttonPin0 = 2;     // the number of the pushbutton pin
const int buttonPin1 = 4;
const int buttonPin2 = 7;
const int buzzerPin =  13;      // the number of the LED pin

// notes that the buzzer can play
const double cFour = 261.63;
const double dFour = 293.66;
const double eFour = 329.63;
const double fFour = 349.63;
const double gFour = 392.00;
const double aFour = 440.00;
const double bFour = 493.88;

// variables will change:
int button0 = 0;         // variable for reading the pushbutton status
int button1 = 0;
int button2 = 0;

void setup() 
{
   // initialize the speaker pin as an output:
   pinMode(buzzerPin, OUTPUT);

   // initialize the pushbutton pins as inputs:
  pinMode(buttonPin0, INPUT);
  pinMode(buttonPin1, INPUT);
  pinMode(buttonPin2, INPUT);
}

void loop() 
{
  // read the state of the pushbutton value:
  button0 = digitalRead(buttonPin0);
  button1 = digitalRead(buttonPin1);
  button2 = digitalRead(buttonPin2);

  // if button0 is pushed
  if (button0 && !button1 && !button2)
  {
    tone(buzzerPin, cFour);
  }
  // if button1 is pushed
  else if (button1 && !button0 && !button2)
  {
    tone(buzzerPin, dFour);
  }
  // if button2 is pushed
  else if (button2 && !button1 && !button0)
  {
    tone(buzzerPin, eFour);
  }
  // if button0 and button1 are pressed
  else if (button0 && button1 && !button2)
  {
    tone(buzzerPin, fFour);
  }
  // if button1 and button2 are pressed
  else if (button1 && button2 && !button0)
  {
    tone(buzzerPin, gFour);
  }
  // if button0 and button2 are pressed
  else if (button0 && button2 && !button1)
  {
    tone(buzzerPin, aFour);
  }
  // if no button is pushed
  else
  {
    noTone(buzzerPin);
  }
}
